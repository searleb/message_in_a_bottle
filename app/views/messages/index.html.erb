<div id='messages-container'>
<h1>HEROKU!?</h1>
	<% if current_user %>
 			<%= link_to("sign out", destroy_user_session_path ,:method => :delete) %>
			<%= form_for @new_message do |f| %>
			<p>
				<%= f.label :message %>
				<%= f.text_field :message, :autofocus => true %>
			</p>
			<%= f.submit %>
			<% end %>
	<% else %>
				<%= link_to("Sign in to leave a message", new_user_session_path) %>
	<% end %>
</div>


<script>vex.defaultOptions.className = 'vex-theme-flat-attack';
</script>

<script>
	$('#messages-container').on('click', '.blob', function(){
		var $this = $(this);
		var message = $this.data('message');
		var date = $this.data('date');
		var nickname = $this.data('nickname');
		vex.dialog.open({
			message: "'"+ message +"'" + '<br> This delightful message has been at sea since ' + date + "." + '<br> Signed, ' + nickname,
			});
	});
</script>
